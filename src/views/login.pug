extend base

block content 
  if errorMessage
    span=errorMessage
  form(method="POST")
    input(name="username" , type="text", placeHolder="Type username", required)
    input(name="password" , type="password", placeHolder="Type password", required)
    input(value="Login", type="submit")
    include partials/social-login
  div.auth-switch
    span Don't have an account? 
    a(href="/users/github/start") Continue with Github &rarr;