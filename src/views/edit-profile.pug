extends base

block content
  img(src="/" + loggedInUser.avatarUrl, width="100", height="100")
  form(method="POST", enctype="multipart/form-data")
    label(for="Avatar") Avatar
    input(type="file", id="avatar", name="avatar", accept="image/*")
    input(name="name", placholder="Name", type="name", required, value=loggedInUser.name)
    input(name="email", placholder="Email", type="email", required, value=loggedInUser.email)
    input(name="username", placholder="Username", type="text", required, value=loggedInUser.username)
    input(name="location", placholder="location", type="text", required, value=loggedInUser.location)
    
    input(type="submit", value="Update Profile")
    if !loggedInUser.socialOnly
      hr
      a(href="/users/change-password") Change Password